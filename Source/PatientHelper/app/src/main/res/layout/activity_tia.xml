<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <TextView
        android:text="                                 Klik aan wat u wilt bekijken"
        android:layout_width="337dp"
        android:layout_height="75dp"
        android:id="@+id/ClickOn"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2" />

    <Button
        android:layout_weight="0.06"
        android:text="Medicijnen"
        android:layout_width="358dp"
        android:layout_height="wrap_content"
        android:id="@+id/Medicines"
        android:layout_alignParentStart="true"
        android:layout_marginStart="12dp"/>

    <Button
        android:layout_weight="0.06"
        android:text="Nazorg"
        android:layout_width="358dp"
        android:layout_height="wrap_content"
        android:id="@+id/AfterCare"
        android:layout_alignParentStart="true"
        android:layout_marginStart="12dp"


    />

    <Button
        android:text="Hoe herken je een TIA?"
        android:layout_width="358dp"
        android:layout_height="wrap_content"
        android:id="@+id/Recognise"
        android:textAppearance="@android:style/TextAppearance.Material.Widget.Button"
        android:layout_alignParentStart="true"
        android:layout_marginStart="12dp"
        android:layout_weight="0.06"/>
</LinearLayout>
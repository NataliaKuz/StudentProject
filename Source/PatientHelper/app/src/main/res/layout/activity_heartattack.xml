<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <TextView
        android:text="                            Klik aan wat u wilt bekijken"
        android:layout_width="340dp"
        android:layout_marginStart="12dp"
        android:layout_weight="0.19"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:id="@+id/ClickOn"
        android:layout_height="wrap_content" />

    <Button
        android:text="Medicijnen"
        android:layout_width="358dp"
        android:layout_height="wrap_content"
        android:id="@+id/Medicines"
        android:layout_below="@+id/passwordField"
        android:layout_alignParentStart="true"
        android:layout_marginStart="12dp"
        android:layout_weight="0.06" />

    <Button
        android:text="Nazorg"
        android:layout_width="358dp"
        android:layout_height="wrap_content"
        android:id="@+id/Aftercare"
        android:layout_alignParentStart="true"
        android:layout_marginStart="12dp"
        android:layout_weight="0.08" />

    <Button
        android:text="Wat is een hartaanval"
        android:layout_width="359dp"
        android:layout_height="wrap_content"
        android:id="@+id/WhatItIs"
        android:layout_alignParentStart="true"
        android:layout_marginStart="12dp"
        android:layout_weight="0.08" />

    <Button
        android:text="Informatie over ICD hartkastje "
        android:layout_width="359dp"
        android:layout_height="wrap_content"
        android:id="@+id/ICD"
        android:layout_alignParentStart="true"
        android:layout_marginStart="12dp"
        android:layout_weight="0.08" />


</LinearLayout>